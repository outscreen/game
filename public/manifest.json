{
  "manifest_version": 2,

  "name": "LinkReminder",
  "description": "Application to remind you about interesting links",
  "version": "1.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },

  "background": {
    "scripts": [
      "build/background.js"
    ]
  },

  "permissions": [
    "activeTab",
    "notifications",
    "https://ajax.googleapis.com/",
    "http://127.0.0.1/",
    "http://alinaloi.com/"
  ]
}